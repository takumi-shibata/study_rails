<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
    <div class="form users_signup-form">
      <div class="form-body">
        <%= form_with(model: @user, url: users_path, local: true) do |f| %>
          <div class="error-message">
            <% @user.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
          </div>

          <!-- form_withで使用できるhtmlタグをしっかり確認しておくこと！ -->
          <%= f.text_field :name %>
          <%= f.email_field :email %>
          <%= f.password_field :password %>
          <%= f.submit "ユーザーを登録する" %>
        <% end %>
      </div>
    </div>       
  </div>
</div>